---
import { parseDate } from "../../../utils/utils";
import { FaChevronRight } from "react-icons/fa";

const { node } = Astro.props;

const startDateFormated = parseDate(node?.startDate);
const endDateFormated = node?.endDate && parseDate(node?.endDate);
---

    <div class="tableRowConf w-[155px] flex sm:gap-4 items-center px-3 sm:px-6 py-[16px] text-neutrals-400">
      <div class="flex flex-col items-center justify-center">
        <span class="uppercase font-[700] -mb-[6px] text-[11px] sm:text-[13px]">
          {startDateFormated.mon}
        </span>
        <span class="text-xl sm:text-2xl font-[700] -mb-[2px]">
          {startDateFormated.date}
        </span>
        <span class="tableRowConfYear text-neutrals-300 text-[11px] sm:text-[13px]">
          {startDateFormated.year}
        </span>
      </div>
      {node?.endDate && (
        <span class="m-1 sm:m-0 text-[10px] sm:text-[16px] text-[#B1B3C8]">
          <FaChevronRight />
        </span>
      )}
      {node?.endDate && (
        <div class="flex flex-col items-center justify-center">
          <span class="uppercase font-[700] -mb-[6px] text-[11px] sm:text-[13px]">
            {endDateFormated.mon}
          </span>
          <span class="text-xl sm:text-2xl font-[700] -mb-[2px]">
            {endDateFormated.date}
          </span>
          <span class="tableRowConfYear text-neutrals-300 text-[11px] sm:text-[13px]">
            {endDateFormated.year}
          </span>
        </div>
      )}
    </div>
